@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4 style="color:red; text-align: center">@ViewBag.ThongBao</h4>
<table align="center">
    <h2 style="text-align:center">ĐĂNG KÝ THÀNH VIÊN</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td> Tên đăng nhập:</td>
            <td>
                @Html.TextBox("Tendn")
                @ViewData["Loi1"]
            </td>
        </tr>
        <tr style="height:40px">
            <td> Mật khẩu:</td>
            <td>
                @Html.TextBox("MatKhau")
                @ViewData["Loi2"]
            </td>
        </tr>

        <tr style="height:40px">
            <td></td>
            <td>
                <input type="Submit" value="Login" />
            </td>
        </tr>
    }
</table>
