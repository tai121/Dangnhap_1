
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table align="center">
    <h2 style="text-align:center">ĐĂNG KÝ THÀNH VIÊN</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td> Họ tên khách hàng:</td>
            <td>
                @Html.TextBox("Hoten")
                @ViewData["Loi1"]
            </td>
        </tr>
        <tr style="height:40px">
            <td> Giới tính:</td>
            <td>
                @Html.TextBox("GioiTinh")
                @ViewData["Loi2"]
            </td>
        </tr>
        <tr style="height:40px">
            <td> Email:</td>
            <td>
                @Html.TextBox("email")
                @ViewData["Loi3"]
            </td>
        </tr>
        <tr style="height:40px">
            <td> Sđt:</td>
            <td>
                @Html.TextBox("sdt")
                @ViewData["Loi4"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>  Tên đăng nhập:</td>
            <td>
                @Html.TextBox("tdn")
                @ViewData["Loi5"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>  Mật khẩu:</td>
            <td>
                @Html.Password("Matkhau")
                @ViewData["Loi6"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Mật khẩu nhập lại: </td>
            <td>
                @Html.Password("Matkhaunhaplai")
                @ViewData["Loi7"]
            </td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td>
                <input type="Submit" value="Đăng ký" />
            </td>
        </tr>
    }
</table>
